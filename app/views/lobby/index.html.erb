<div class="container">
  <div id='text'>
    <br>
    VSA Presents:
    <h1>Saigon by Night</h1>
    <hr>
  </div>

  <%= form_tag action: :join do %>
    <%= label_tag(:code, "Join a Room:") %>
    <%= text_field_tag(:code) %>
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <%= fa_icon "sign-in", text: "Join" %>
    <% end %>
  <% end %>
  <h2>or...</h2>
  <%= button_to "Create a Room", {controller: :rooms, action: :new}, {class: "btn btn-primary", method: 'get'} %>
</div>
